<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="40dp"
            app:cardCornerRadius="50dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="7dp"
                android:background="#A9E6E6E8"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_arrow_back_24" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/editTextCreateActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/cursor"
            android:backgroundTint="#a2d9ff"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="Text... "
            android:inputType="textPersonName" />
        <Button
            android:id="@+id/createCode"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alfa_slab_one"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonsettings"
            android:drawableRight="@drawable/ic_baseline_palette_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Create  "
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_grain_24" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
        <Button
            android:id="@+id/shareButton"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonsettings"
            android:drawableRight="@drawable/ic_baseline_share_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:fontFamily="@font/alfa_slab_one"

            android:text="Share  "
            android:visibility="invisible"
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF" />
        <Button
            android:id="@+id/downloadButton"
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/alfa_slab_one"

            android:background="@drawable/buttonsettings"
            android:drawableRight="@drawable/ic_baseline_get_app_24"
            android:paddingLeft="20dp"
            android:visibility="invisible"
            android:paddingRight="20dp"
            android:text="Download  "
            android:textAllCaps="false"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>